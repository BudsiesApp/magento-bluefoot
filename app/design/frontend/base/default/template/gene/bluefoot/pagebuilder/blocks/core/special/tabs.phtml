$_entity = $this->getEntity();
?>
<?php if ($this->hasChildEntities('tabs_items')): ?>
    <?php $_collection = $this->getChildEntities('tabs_items'); ?>
    <div id="bluefoot-tabs-<?php echo $_entity->getId(); ?>" class="bluefoot-tabs bluefoot-full-width <?php echo $this->getCssAttributes(); ?>"<?php echo $this->getStyleAttributes(); ?>>
        <ul class="bluefoot-tabs-navigation bluefoot-mobile-hidden bluefoot-full-width">
            <?php $_i = 0; foreach ($_collection as $_block): $_i++; ?>
                <li>
                    <span class="bluefoot-tab<?php echo ($_i == 1) ? ' active' : '' ; ?><?php echo ($_i == count($_collection)) ? ' last' : '' ; ?>" data-tab="#bluefoot-tab-<?php echo $_block->getEntity()->getId(); ?>">
                        <?php echo $_block->getEntity()->getTitle(); ?>
                    </span>
                </li>
            <?php endforeach; ?>
        </ul>

        <div class="bluefoot-tabs-outer bluefoot-full-width">
            <?php $_j = 0; foreach ($_collection as $_block): $_j++; ?>
                <?php echo $_block->setCount($_j)->toHtml(); ?>
            <?php endforeach; ?>
        </div>
    </div>

    <script type="text/javascript">
        jQuery('#bluefoot-tabs-<?php echo $_entity->getId(); ?>').bluefootTabs();
        jQuery('#bluefoot-tabs-<?php echo $_entity->getId(); ?>').bluefootAccordion();
    </script>
<?php endif; ?>